# Personal OS - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# ======================
# AI Provider (Choose one or both)
# ======================

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Which AI provider to use (anthropic or openai)
AI_PROVIDER=anthropic

# Model selection
# Anthropic: claude-opus-4-5-20251101, claude-sonnet-4-5-20250929, claude-3-5-haiku-20241022
# OpenAI: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
AI_MODEL=claude-sonnet-4-5-20250929

# ======================
# Slack Integration
# ======================

# Slack Bot Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Slack App Token (starts with xapp-) - for socket mode
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Slack Signing Secret
SLACK_SIGNING_SECRET=your-signing-secret

# Your Slack user ID (for DMs)
SLACK_USER_ID=U0123456789

# Slack channel for daily updates
SLACK_CHANNEL_DAILY=#personal-os-updates

# Slack channel for weekly summaries
SLACK_CHANNEL_WEEKLY=#weekly-summary

# ======================
# Lark (Feishu) Integration
# ======================

# Lark App ID
LARK_APP_ID=cli_your_app_id_here

# Lark App Secret
LARK_APP_SECRET=your_app_secret_here

# Your Lark user open_id (for DMs)
LARK_USER_ID=ou_your_open_id_here

# Lark chat/group ID for daily updates (optional)
LARK_CHAT_ID=oc_your_chat_id_here

# ======================
# Messaging Platform Preference
# ======================

# Which messaging platform to use (slack, lark, both)
MESSAGING_PLATFORM=slack

# ======================
# Calendar Integration (Google Calendar)
# ======================

# Google Calendar API credentials file path
GOOGLE_CALENDAR_CREDENTIALS=credentials/google_calendar_credentials.json

# Your primary calendar ID (usually your email)
GOOGLE_CALENDAR_ID=your-email@gmail.com

# ======================
# Task Management (Choose your tool)
# ======================

# Notion
NOTION_API_KEY=secret_your_notion_api_key
NOTION_DATABASE_ID=your_database_id

# Jira
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=PROJ

# Asana (alternative)
ASANA_ACCESS_TOKEN=your_asana_token
ASANA_WORKSPACE_ID=your_workspace_id

# Linear (alternative)
LINEAR_API_KEY=your_linear_api_key
LINEAR_TEAM_ID=your_team_id

# Which task system to use (notion, jira, asana, linear)
TASK_SYSTEM=notion

# ======================
# Agent Configuration
# ======================

# Timezone for scheduling
TIMEZONE=America/New_York

# Agent execution times (24-hour format)
EXECUTION_AGENT_MORNING_TIME=08:00
EXECUTION_AGENT_MIDDAY_TIME=12:30
EXECUTION_AGENT_EVENING_TIME=17:30

STRATEGY_AGENT_MORNING_TIME=08:00
STRATEGY_AGENT_WEEKLY_TIME=Monday 09:00

STAKEHOLDER_AGENT_WEEKLY_UPDATE_TIME=Friday 15:00

DISCOVERY_AGENT_DAILY_DIGEST_TIME=17:00

# ======================
# Personal Context
# ======================

# Your name
USER_NAME=Your Name

# Your role/title
USER_ROLE=Product Manager

# Your company
COMPANY_NAME=Your Company

# Your current OKRs (comma-separated)
CURRENT_OKRS=Improve activation by 25%, Launch feature X, Reduce churn by 10%

# Strategic priorities (comma-separated)
STRATEGIC_PRIORITIES=User activation, Product quality, Team efficiency

# ======================
# Optional: Database
# ======================

# SQLite database path (for storing agent history)
DATABASE_URL=sqlite:///personal_os.db

# ======================
# Logging
# ======================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/personal_os.log

# ======================
# Automation Settings
# ======================

# Enable/disable specific agents
ENABLE_EXECUTION_AGENT=true
ENABLE_STRATEGY_AGENT=true
ENABLE_DISCOVERY_AGENT=true
ENABLE_STAKEHOLDER_AGENT=true

# Dry run mode (true = don't actually send messages, just log)
DRY_RUN=false
